<h1>Create a new post</h1>

<%= form_with model: @post, url: user_posts_path do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </div>
  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>